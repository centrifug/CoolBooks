@model List<Quiz>
@{
    ViewData["Title"] = "Index";
}

<h1>Mina Quiz.</h1>

<partial name="_AdminMenu" />
<table class="table">
    <thead>
        <tr>
            <th>
                Quiz!
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a class="link-Secondary" asp-controller="Quiz" asp-action="Take" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @if (item.CreatedBy == userManager.GetUserId(User) || User.IsInRole("Admin" ))
                {
                    <a asp-action="Edit" asp-controller="Quiz" asp-route-id="@item.Id">Edit</a> 
                    <a asp-action="Delete" asp-controller="Quiz" asp-route-id="@item.Id">Delete</a>
                }        
            </td>
        </tr>
}
    </tbody>
</table>