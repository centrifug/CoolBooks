@model CoolBooksUser
@{
    ViewData["Title"] = "Profile";

}

<h1>Min profil</h1>
@*<partial name="_StatusMessage" for="StatusMessage" />*@
<a asp-controller="Account" asp-action="Profile">Min Profil</a>
<a asp-controller="Account" asp-action="ProfileEdit">Edit profil</a>     
<a asp-controller="Account" asp-action="ProfileReviews">Mina reviews</a> 
<a asp-controller="Account" asp-action="ProfileMinaQuiz">Mina quiz</a> 
<a asp-controller="Account" asp-action="ProfileMinaQuizTaken">Quiz som jag har spelat</a> 

<div class="d-flex flex-wrap justify-content-evenly">
<div class="m-3 d-flex flex-column justify-content-center align-content-center">
<p>Namn: @Model.Name</p>
</div>
<div class="m-3 d-flex flex-column justify-content-center align-content-center">
<p>Födelsedatum: @Model.DOB</p>
</div>
<div class="m-3 d-flex flex-column justify-content-center align-content-center">
<p>Email: @Model.Email</p>
</div>
<div class="m-3 d-flex flex-column justify-content-center align-content-center">
<p>Telefon-Nummer: @Model.PhoneNumber</p>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
