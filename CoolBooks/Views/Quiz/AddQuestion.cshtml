@model AddQuestionViewModel

<h3>Lägg till en fråga!</h3>


<form asp-action="AddQuestion">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="QuizId" />
    <div class="form-group">
        <label asp-for="Text" class="control-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    @for (var i = 0; i < @Model.Options.Count; i++)
    {
    <div class="form-group d-flex">
        <div class="d-flex align-items-center me-3">
            <label asp-for="@Model.Options[i].Answer" class="control-label">Svar: </label>
            <span asp-validation-for="Answer" class="text-danger"></span>
            <input class="ms-1" type="radio" name="Answer" value="@(i+1)">
        </div>
        <div class="flex-fill">
            <label asp-for="@Model.Options[i].Text" class="control-label"></label>
            <input type="text" asp-for="@Model.Options[i].Text" class="form-control" />              
            <span asp-validation-for="@Model.Options[i].Text" class="text-danger"></span>
        </div>
    </div>
    }

    <div class="mt-2 form-group d-flex justify-content-between">
        <input type="submit" value="Spara fråga" class="btn btn-primary" />
        <div>
            <strong>Du måste spara frågan innan du trycker färdig, annars försvinner den! </strong><a asp-action="Index" asp-controller="Quiz" class="btn btn-danger">Färdig</a>
        </div>
    </div>
</form>