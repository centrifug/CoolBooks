@model BookWithReviewsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />

    <dl class="row">
           <div class="card mb-3" style="max-width: 100%;">
                    <div class="row no-gutters">
                <div class="col-md-4">

                   <img src=" @Html.DisplayFor(model => model.book.ImagePath)" class="card-img" alt="...">


                 </div>
                    <div class="col-md-8">
                        <div class="card-body">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.book.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.book.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.book.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.book.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.book.ISBN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.book.ISBN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.book.Created)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.book.Created)
        </dd>
                     </div>
                </div>
           </div>
       </div>


    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.book.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (Model.reviews.Any())
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.reviews[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reviews[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reviews[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reviews[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reviews[0].IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reviews[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.reviews) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
    </table>

}
else
{
<h3>Det finns inga reviews ännu... var den första som rescenserar?</h3>   

}
