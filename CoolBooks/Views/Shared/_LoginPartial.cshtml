@using Microsoft.AspNetCore.Identity

@inject SignInManager<CoolBooksUser> SignInManager
@inject UserManager<CoolBooksUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="account" asp-action="profile">Profile</a>
    </li>
    <li class="nav-item">
        <form method="post" asp-action="logout" asp-controller="account">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout @UserManager.GetUserName(User)</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link" asp-controller="account" asp-action="login">
                Log in
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="account" asp-action="register">
                Register
            </a>
        </li>
}
</ul>
