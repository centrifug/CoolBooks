@model IEnumerable<CoolBooks.Models.Book>

@{
    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
    var action = this.ViewContext.RouteData.Values["action"].ToString();
    var route = ViewContext.RouteData.Values["id"];
}        
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.ImagePath)*@
            </th>
            <th>
                <a asp-controller="@controller" asp-action="@action" asp-route-id="@route" asp-route-sortOrder="@ViewBag.TitleAscDescSortParam">test</a>
                @Html.ActionLink("Title ASC/DESC", "Index", new { sortOrder = ViewBag.TitleAscDescSortParam })
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                @Html.ActionLink("Description ASC/DESC", "Index", new { sortOrder = ViewBag.DescriptionAscDescSortParam })
                @*@Html.DisplayNameFor(model => model.Description)*@
            </th>
            <th>
                @*@Html.ActionLink("Genre ASC/DESC", "Index", new { sortOrder = ViewBag.GenreAscDescSortParam })*@
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th>
                @Html.ActionLink("Rating ASC/DESC", "Index", new { sortOrder = ViewBag.RatingAscDescSortParam })
                @*@Html.DisplayNameFor(model => model.Rating)*@
            </th>
            <th>
                @*@Html.ActionLink("Author ASC/DESC", "Index", new { sortOrder = ViewBag.AuthorAscDescSortParam })*@
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
         <tr>
            <td>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id"><img src=" @Html.DisplayFor(model => item.ImagePath)" class="card-img-thumbnail" alt="..." width="150px" height="223px"></a>   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.Genres.Any())
                {
                    foreach(var genre in item.Genres)
                    {
                        @Html.DisplayFor(modelItem => genre.Name)<br />
                    }            
                }
                else
                {
                    <p>no genre</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @if (item.Genres.Any())
                {
                    foreach(var author in item.Authors)
                    {
                        @Html.DisplayFor(modelItem => author.FullName)<br />
                    }            
                }
                else
                {
                    <p>no author</p>
                }
            </td>
            <td>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">Details</a>
        @if(signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
                <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id">Edit</a>                
                <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        }
            </td>
        </tr>
}

    </tbody>
</table>



       