@model Book
        
        <tr>
            <td>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id"><img src=" @Html.DisplayFor(model => Model.ImagePath)" class="card-img-thumbnail" alt="..." width="150px" height="223px"></a>   
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Description)
            </td>
            <td>
                @if (Model.Genres.Any())
                {
                    foreach(var item in Model.Genres)
                    {
                        @Html.DisplayFor(modelItem => item.Name)
                    }            
                }
                else
                {
                    <p>no genre</p>
                }
            </td>       
            <td>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id">Details</a>
        @if(signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
                <a asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>                
                <a asp-controller="Books" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        }
            </td>
        </tr>