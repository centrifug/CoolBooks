@{
}

<button id="Report" class="btn btn-primary"><span id="FLAGGA">Rapportera</span></button>

<script>
    $("#Report").click(function() {
         
        $.get("@Url.Content("~/Reviews/Report")/?id=" + 1, function(data) {  
          
        $("#FLAGGA").text(data); 
        $("#Report").toggleClass("btn-danger");
        $("#Report").toggleClass("btn-primary");

    });  
});     
    </script>